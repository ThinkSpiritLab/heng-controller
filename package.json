{
    "name": "heng-controller",
    "version": "0.0.1",
    "description": "",
    "author": "ThinkSpirit Developers",
    "private": true,
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write src/*.ts src/**/*.ts test/*.ts test/**/*.ts",
        "check:format": "prettier --check src/*.ts src/**/*.ts test/*.ts test/**/*.ts",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint src test --fix",
        "check:lint": "eslint src test -f codeframe",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@iarna/toml": "^2.2.5",
        "@nestjs/common": "^8.4.5",
        "@nestjs/core": "^8.4.5",
        "@nestjs/platform-express": "^8.4.5",
        "@nestjs/platform-ws": "^8.4.5",
        "@nestjs/websockets": "^8.4.5",
        "axios": "^0.27.2",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "commander": "^9.2.0",
        "eslint-plugin-prettier": "^4.0.0",
        "generic-pool": "^3.7.1",
        "heng-protocol": "^0.0.6",
        "heng-sign-js": "^0.0.18",
        "ioredis": "^5.0.5",
        "lodash": "^4.17.20",
        "moment": "^2.29.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.5.5"
    },
    "devDependencies": {
        "@nestjs/cli": "^8.2.6",
        "@nestjs/schematics": "^8.0.11",
        "@nestjs/testing": "^8.4.5",
        "@types/express": "^4.17.3",
        "@types/generic-pool": "^3.1.9",
        "@types/ioredis": "^4.17.5",
        "@types/jest": "^27.5.1",
        "@types/lodash": "^4.14.159",
        "@types/node": "^16.11.36",
        "@types/supertest": "^2.0.8",
        "@types/validator": "^13.7.2",
        "@types/ws": "^8.5.3",
        "@typescript-eslint/eslint-plugin": "^5.25.0",
        "@typescript-eslint/parser": "^5.25.0",
        "eslint": "^8.16.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.20.1",
        "jest": "^28.1.0",
        "prettier": "^2.6.2",
        "supertest": "^6.2.3",
        "ts-jest": "^28.0.2",
        "ts-loader": "^9.3.0",
        "ts-node": "^10.7.0",
        "tsconfig-paths": "^4.0.0",
        "typescript": "^4.6.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
